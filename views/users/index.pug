extends ../layouts/common.pug

block content
	h1 Users
	a.btn.btn-primary(href="/users/create") New

	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method="GET")  
			input(type="text", name="q", placeholder="..........",value= inputValue)
			button Search

	table.table
		tr
			th Name
			th Phone
			th Actions

		each i in usersList
			tr
				td= i.name
				td= i.phone 
				td
					a.btn.btn-info(href="/users/" + i.id) View 
